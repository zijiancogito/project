<view class="container">
    <view class="page">
        <view class="page__bd">
            <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input"  style="height:100rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">认证问题：</label>
                        </view>
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">{{question}}</label>
                        </view>
                    </view>
                </view>
            </view>
            <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input" style="height:50rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                            <label class="weui-label">提示：</label>
                        </view>
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">{{tip}}</label>
                        </view>
                    </view>
                </view>
            </view>
            <view class="line"></view>
             <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input"  style="height:100rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">问题答案：</label>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" placeholder="请输入答案" bindinput="bindAnswerInput" confirm-type="next" type="text"/>
                        </view>
                        <view class="input-container flex-rest-width" style="width:535rpx;">
                            <input id="answer" value="{{inputValue}}" placeholder="请输入问答案" focus="true" confirm-type="next" class="weui-input" type="text" bindchange="bindChange"/>
                        </view>
                    </view>
                </view>
            </view>
            <view class="line"></view>
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" open-type="bindCommit">提交答案</button>
            </view>
        </view>
    </view>
</view>