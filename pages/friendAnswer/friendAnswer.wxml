<view class="container">
    <view class="page">
        <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__title weui-media-box__title_in-text">认证问题</view>
                    <view class="weui-media-box__desc">{{question}}</view>
                </view>
            </view>
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__title weui-media-box__title_in-text">提示</view>
                    <view class="weui-media-box__desc">{{tip}}</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input"  style="height:100rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">问题答案：</label>
                        </view>
                        <view class="weui-cell__bd" >
                            <input id="answer" value="{{inputValue}}" placeholder="请输入答案" focus="true" confirm-type="next" class="weui-input" type="text" bindchange="bindChange"/>
                        </view>
                    </view>
                </view>
            </view>
        </view>
             
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="bindCommit">提交答案</button>
            </view>
        </view>
    </view>
</view>