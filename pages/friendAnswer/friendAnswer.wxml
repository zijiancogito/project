<view class="container">
    <view class="page">
        <view class="page__bd">
            <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input"  style="height:100rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">认证问题：</label>
                        </view>
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">{{question}}</label>
                        </view>
                    </view>
                </view>
            </view>
            <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input" style="height:100rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                            <label class="weui-label">提示：</label>
                        </view>
                        <view class="weui-cell__hd" style="width:300rpx">
                                <label class="weui-label">{{tip}}</label>
                        </view>
                    </view>
                </view>
            </view>
            <view class="line"></view>
             <view class="weui-cell weui-cell_vcode">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input"  style="height:100rpx;">
                        <view class="weui-cell__hd" style="width:180rpx">
                                <label class="weui-label">问题答案：</label>
                        </view>
                        <view class="weui-cell__bd" >
                            <input id="answer" value="{{inputValue}}" placeholder="请输入答案" focus="true" confirm-type="next" class="weui-input" type="text" bindchange="bindChange"/>
                        </view>
                    </view>
                </view>
            </view>
            <view class="line"></view>
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="bindCommit">提交答案</button>
            </view>
        </view>
    </view>
</view>