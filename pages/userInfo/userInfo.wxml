<!-- userInfo.wxml-->
<view class="page" style="height:100%">
    <view class="page__bd">
        <view class="space" style="height:45rpx"></view>
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
            <view class="weui-media-box weui-media-box_appmsg">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{avatarUrl}}" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">{{username}}</view>
                    <view class="weui-media-box__desc">{{addition}}</view>
                </view>
            </view>
            </view>
        </view>
        <view class="space" style="height:45rpx"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell" style="height:60rpx">
                <view class="weui-cell__bd">国籍</view>
                <view class="weui-cell__ft">{{country}}</view>
            </view>
            <view class="line"></view>
            <view class="weui-cell" style="height:60rpx">
                <view class="weui-cell__bd">城市</view>
                <view class="weui-cell__ft">{{area}}</view>
            </view>
        </view>
        <view class="space" style="height:45rpx"></view>
        <view class="weui-cells weui-cells_after-title">
            <navigator bindtap="showCode" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">我的二维码</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" type="warn" bindtap="confDel">删除所有聊天记录</button>
        </view>
    </view>
</view>
